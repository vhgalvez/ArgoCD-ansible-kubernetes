# roles/argocd/templates/values.yaml.j2
configs:
  params:
    server.insecure: true  # Permitir HTTP sin TLS dentro del clúster

server:
  service:
    type: ClusterIP  # Acceso interno, expuesto por Ingress
    portHttp: 80
    portHttps: 443

  ingress:
    enabled: true
    ingressClassName: traefik
    hostname: "{{ ingress_host }}"
    annotations:
      kubernetes.io/ingress.class: traefik
      traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
      traefik.ingress.kubernetes.io/router.tls: "true"
    paths:
      - path: /
        pathType: Prefix
    tls:
      - hosts:
          - "{{ ingress_host }}"
        secretName: argocd-tls  # ⚠️ Opcional: crea un secreto TLS si usas HTTPS real

  # Opcional: para personalizar UI, auth, etc.
  extraArgs:
    - --basehref=/

  # Por defecto ArgoCD usa TLS; puedes desactivarlo en entornos locales
  insecure: true

repoServer:
  service:
    type: ClusterIP

dex:
  enabled: false  # Desactiva Dex si usas otro sistema de auth

controller:
  service:
    type: ClusterIP