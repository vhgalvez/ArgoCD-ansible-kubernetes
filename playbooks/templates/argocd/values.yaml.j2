# playbooks\templates\values.yaml.j2
configs:
  params:
    server.insecure: true  # Permite UI sin HTTPS interno (Traefik termina TLS)

server:
  service:
    type: ClusterIP
    portHttp: 80
    portHttps: 443

  # ❌ Desactivamos el Ingress del chart porque usas IngressRoute personalizado
  ingress:
    enabled: false

  # ✅ Root path (mejor que basehref)
  extraArgs:
    - --rootpath=/

  # ⚠️ Habilita HTTP interno para el dashboard detrás de Traefik
  insecure: true

repoServer:
  service:
    type: ClusterIP

controller:
  service:
    type: ClusterIP

dex:
  enabled: false  # No necesitas OIDC en esta fase