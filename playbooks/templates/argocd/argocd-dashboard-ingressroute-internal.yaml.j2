# templates/argocd/argocd-dashboard-ingressroute-internal.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: ingressroute-argocd-internal
  namespace: {{ argocd_namespace }}
  labels:
    app.kubernetes.io/name: argocd
    app.kubernetes.io/component: ingress
    environment: prod
  annotations:
    created-by: ansible
    maintained-by: devops@socialdevs.site
spec:
  entryPoints:
    - websecure  # Debe ser HTTPS
  routes:
    - match: Host(`{{ argocd_dashboard_domain }}`) && PathPrefix(`/`)
      kind: Rule
      middlewares:
        - name: {{ argocd_middleware_name }}
          namespace: {{ argocd_namespace }}
      services:
        - name: argocd-server
          port: 80
          scheme: http  # Traefik manejar√° el TLS
  tls:
    secretName: {{ tls_secret_name }}  # El certificado TLS para el dominio